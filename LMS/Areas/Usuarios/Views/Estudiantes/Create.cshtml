@model LMS.Models.ViewModels.EstudianteyClaseViewModel
@using LMS.Extensions

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info"> Crear Estudiantes</h2>

<br />
<partial name="_StatusMessage" model="Model.StatusMessage" />

<form method="post" asp-action="Create">
    <div class="border backgroundWhite">

        <div asp-validation-summary="ModelOnly" class="text-danger">


        </div>

        <div class="form-group row">

            <div class="col-3">

                <label asp-for="Estudiantes.UserId" class="col-form-label"></label>
            </div>

            <div class="col-5">

                <select id="ddlListadeusuarios" asp-for="Estudiantes.UserId" asp-items="Model.UsuariosList.ToSelectListItem(Model.Estudiantes.UserId)" class="form-control"></select>
            </div>


        </div>

        <div class="form-group row">

            <div class="col-3">

                <label asp-for="Estudiantes.ClaseId" class="col-form-label"></label>
            </div>

            <div class="col-5">

                <select id="ddlListadeusuarios" asp-for="Estudiantes.ClaseId" asp-items="Model.ClaseList.ToSelectListItem(Model.Estudiantes.ClaseId)" class="form-control"></select>
            </div>


        </div>


   


        <div class="form-group row">

            <div class="col-5 offset-2">

                <partial name="_CreateAndBackToListButton" />

            </div>

        </div>

    </div>

</form>

