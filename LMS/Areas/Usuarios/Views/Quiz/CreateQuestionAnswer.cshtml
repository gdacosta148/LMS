@model LMS.Models.ViewModels.QuizViewModel



@{
    ViewData["Title"] = "CreateQuestionAnswer";

    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<br />

<h2 class="text-info"> Crear Pregunta</h2>

<br />


<form method="post" asp-action="CreateQuestionAnswer">
    <div class="border backgroundWhite">

        <div asp-validation-summary="ModelOnly" class="text-danger">


        </div>

        <input type="hidden" asp-for="QuizQuestion.Id" />
        <div class="form-group row">

            <div class="col-3">

                <label asp-for="Answer.Id" class="col-form-label"></label>


            </div>

            <div class="col-5">
                @Html.DropDownListFor(model => model.Answer.Id, new SelectList(Model.AnswerCollection, "Id", "Option"), "Select")

            </div>


        </div>






        <div class="form-group row">

            <div class="col-5 offset-2">


                <div class="row">

                    <div class="col-6">

                        <input type="submit" class="btn btn-info form-control" value="CreateQuestionAnswer" />

                    </div>



                </div>

            </div>

        </div>

    </div>

</form>



