@model LMS.Models.ViewModels.QuizViewModel
@using LMS.Utility
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite">

    <div class="row">

        <div class="col-6">

            <h2 class="text-info">Lista de PREGUNTAS</h2>
        </div>

   


        @if (User.IsInRole(SD.TeacherUser))
        {

            <div class="col-6 text-right">
                <p>

                    @*<a asp-action="CrearTarea" asp-route="@Model.Curso.Id" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Crear Nuevo</a>*@

                    <a href="@Url.Action("CreateQuestion", "Quiz", new { Id = Model.Quiz.Id})" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Crear Nuevo</a>
                </p>
            </div>
        }

    </div>


    <br />


    <div>
        @if (Model.QuizQuestions.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.QuizQuestion.Quiz.QuizName)

                    </th>



                    <th>
                        @*@Html.DisplayNameFor(m => m.Tareas.Materia.Nombre)*@

                        @Html.DisplayNameFor(m => m.QuizQuestion.Question)

                    </th>

                    <th>


                    </th>

                    <th>


                    </th>



                    <th>

                    </th>

                    <th>


                    </th>


                </tr>

                @foreach (var item in Model.QuizQuestions)
                {
                    <tr>





                        <td>
                             @Html.DisplayFor(m => item.Quiz.QuizName) 

                        </td>

                        <td>
                            @Html.DisplayFor(m => item.Question)

                        </td>

                        <td>
                        </td>

                        <td>
                        </td>

                        @if (User.IsInRole(SD.TeacherUser))
                        {
                            <td>
                                <partial name="_QuestionTableButtonPartial" model="item.Quiz.Id" />
                            </td>

                        }
                    </tr>

                }
            </table>
        }
        else
        {
            <p> no hay Preguntas existentes...</p>
        }
    </div>


</div>
