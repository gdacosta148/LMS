@model IEnumerable<Tareas>
@using LMS.Utility
@{
    ViewData["Title"] = "Tareas";
    //Layout = "~/Views/Shared/_Layout.cshtml";

    Layout = "~/Views/Shared/_Layout2.cshtml";

}

<br />
<br />

<div class="border backgroundWhite">

    <div class="row">

        <div class="col-6">

            <h2 class="text-info">Lista de Tareas</h2>
        </div>

        @if (User.IsInRole(SD.TeacherUser))
        {
            <div class="col-6 text-right">

                <partial name="_CreateButtonPartial" />
            </div>

        }

    </div>


    <br />


    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.NombreTarea)

                    </th>

                    <th>
                        @*@Html.DisplayNameFor(m => m.Clase.Nombre)*@

                        @Html.DisplayNameFor(m => m.Cursos.Nombre)

                    </th>

                    <th>
                        @Html.DisplayNameFor(m => m.Materia.Nombre)

                    </th>

                    <th>

                    </th>

                    <th>

                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(m => item.NombreTarea)

                        </td>

                        <td>
                            @*@Html.DisplayFor(m => item.Clase.Nombre)*@

                            @Html.DisplayFor(m => item.Cursos.Nombre)

                        </td>

                        <td>
                            @Html.DisplayFor(m => item.Materia.Nombre)

                        </td>

                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>

                }
            </table>
        }
        else
        {
            <p> no hay ninguna tarea existente...</p>
        }
    </div>


</div>

