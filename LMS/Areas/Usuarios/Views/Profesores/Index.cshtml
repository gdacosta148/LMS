@model IEnumerable<Profesores>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


<br />
<br />

<div class="border backgroundWhite">

    <div class="row">

        <div class="col-6">

            <h2 class="text-info">Lista de Profesores</h2>
        </div>

        <div class="col-6 text-right">

            <partial name="_CreateButtonPartial" />
        </div>

    </div>


    <br />


    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.ApplicationUser.Nombre)

                    </th>

                    <th>
                          Clase:

                    </th>

                    <th>
                         Materias que enseña:

                    </th>

                    <th>

                    </th>

                    <th>

                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(m => item.ApplicationUser.Nombre)

                        </td>

                        <td>
                         
                            @{

                                foreach(var clase in item.ClaseProfesor)
                                {

                                    @*@clase.ClaseId @:*@ @clase.NombreClase<br />
                                }

                            }
                        </td>

                        <td>
                            @{

                                foreach (var materia in item.MateriaProfesor)
                                {

                                    @*@materia.MateriaId @:*@ @materia.NombreMateria <br />
                                }

                            }

                        </td>

                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>

                }
            </table>
        }
        else
        {
            <p> no hay ningun profesor existente...</p>
        }
    </div>


</div>
