                    </th>



                    <th>

                    </th>

                    <th>


                    </th>

              
                </tr>

                @foreach (var item in Model)
                {
            <tr>

                <td>
                    @Html.DisplayFor(m => item.Tareas.NombreTarea)

                </td>

                <td>
                    @*@Html.DisplayFor(m => item.Clase.Nombre)*@



                    @*@{
                foreach(var asd in item.Tareas.Prof.ClaseProfesor)
                {
                    @asd.Clases.Nombre
                }


            }*@

                </td>

                <td>
                    @Html.DisplayFor(m => item.Tareas.Cursos.Nombre)

                </td>

                <td>
                    @Html.DisplayFor(m => item.Estudiante.NombreEstudiante)

                </td>

                <td>
                    @Html.DisplayFor(m => item.Nota)

                </td>

                @if (User.IsInRole(SD.TeacherUser))
                {
                    <td>
                        <partial name="_TableButtonPartial" model="item.Id" />
                    </td>

                }
                </tr>

                }
            </table>
        }
        else
        {
            <p> no hay notas existentes...</p>
        }
    </div>


</div>



