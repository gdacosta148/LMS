<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-area="" asp-controller="Home" asp-action="Index">LMS</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            @*<div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>*@
        </form>
        <!-- Navbar-->
        <partial name="_LoginPartial2" />
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading"></div>
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading"></div>
                        @if (User.IsInRole(SD.ManagerUser))
                        {
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                Contenido
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-action="Index" asp-controller="Clases" asp-area="Usuarios">Clases</a>
                                    <a class="nav-link" asp-action="Index" asp-controller="Materia" asp-area="Usuarios">Materia</a>
                                    <a class="nav-link" asp-action="Index" asp-controller="User" asp-area="Usuarios">Usuarios</a>
                                    <a class="nav-link" asp-action="Index" asp-controller="Profesores" asp-area="Usuarios">Profesores</a>

                                    <a class="nav-link" asp-action="Index" asp-controller="Estudiantes" asp-area="Usuarios">Estudiantes</a>
                                </nav>
                            </div>

                        }

                        @if (User.IsInRole(SD.TeacherUser))
                        {


                            <hr class="dropdown-divider" />
                            <a class="nav-link" asp-area="Usuarios" asp-controller="Tareas" asp-action="Index">Tareas</a>

                            <hr class="dropdown-divider" />

                            <a class="nav-link" asp-area="Usuarios" asp-controller="Curso" asp-action="Index">Cursos</a>


                        }
                        @if (User.IsInRole(SD.TeacherUser) || User.IsInRole(SD.StudenUser))
                        {

                            <hr class="dropdown-divider" />
                            <a class="nav-link" asp-area="Usuarios" asp-controller="Calificaciones" asp-action="Index">Notas</a>

                            <hr class="dropdown-divider" />

                        }

                        @if (User.IsInRole(SD.StudenUser))
                        {

                            <hr class="dropdown-divider" />
                            <a class="nav-link" asp-area="Usuarios" asp-controller="Curso" asp-action="IndexEstudiantes">Cursos</a>

                            <hr class="dropdown-divider" />

                        }

                    </div>
</div>

</nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @*<h1 class="mt-4">Dashboard</h1>
